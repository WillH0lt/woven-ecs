{
  "name": "@woven-ecs/core",
  "version": "1.0.0",
  "description": "A multi-threaded Entity Component System (ECS) Framework for TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/WillH0lt/woven-ecs"
  },
  "license": "MIT",
  "author": {
    "name": "Will Whiteneck",
    "email": "will@william.land"
  },
  "files": [
    "build",
    "LICENSE"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "@woven-ecs/source": "./src/index.ts",
      "import": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      },
      "require": {
        "types": "./build/index.d.cts",
        "default": "./build/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf build .turbo",
    "build": "tsup ./src/index.ts --tsconfig ./tsconfig.build.json --config ../../tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "check:exports": "attw --pack .",
    "test": "vitest  --config ../../vitest.config.ts run",
    "test:watch": "vitest  --config ../../vitest.config.ts run --watch"
  },
  "devDependencies": {
    "vitest": "^4.0.7"
  },
  "type": "module",
  "peerDependencies": {
    "typescript": "^5"
  }
}
